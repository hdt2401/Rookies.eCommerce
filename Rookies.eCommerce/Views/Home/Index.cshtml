    <div class="row">
        @{
            foreach (var item in @Model)
            {
                <div class="col-3 mb-2 mt-2">
                    <div class="card">
                      <img src="https://inantemnhan.com.vn/wp-content/uploads/2017/10/no-image.png" class="card-img-top" alt="...">
                      <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Price</p>
                        <div class="d-flex justify-content-between">
                            <a asp-area="" asp-controller="Product" asp-action="Detail" asp-route-id=@item.Id class="btn btn-outline-primary">
