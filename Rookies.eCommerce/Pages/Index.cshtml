@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("Sidebar")
    </div>
    <div class="col-md-9">
        <div class="row">
            @foreach (var item in Model.DBProduct)
            {
                <div class="col-md-4 mb-2">
                    <div>
                        <div class="card">
                            <div class="card-body">
                                <img src="https://localhost:7276/api/product/@item.Id/image" class="card-img-top" alt="@item.Name">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text text-danger fw-bold">@item.Price</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <a class="btn btn-outline-primary fw-bold" asp-page="./Detail" asp-route-id="@item.Id">Xem</a>
                                    <a class="btn btn-primary fw-bold">Mua</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
