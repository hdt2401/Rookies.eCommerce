@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="mt-2">
    <div class="row">
        <div class="col-3">
            <ul class="list-group">
                @foreach (var item in Model.DBCategory)
                {
                    <li class="list-group-item">@item.Name</li>
                }
            </ul>
        </div>
        <div class="col-8">
            <div class="row">
                @foreach (var product in Model.DBProduct)
                {
                    <div class="col-md-4 mb-2">
                        <div asp-page="Detail">
                            <div class="card">
                                <div class="card-body">
                                    <img src=@product.Image class="card-img-top" alt="...">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text text-danger fw-bold">@product.Price</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <a href="#" class="btn btn-outline-primary fw-bold">Xem</a>
                                        <a href="#" class="btn btn-primary fw-bold">Mua</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
