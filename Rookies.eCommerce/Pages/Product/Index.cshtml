@page "/Product"
@model Rookies.eCommerce.Pages.Product.IndexModel
@{
    ViewData["title"] = "Sản phẩm";
}
<h1>@ViewData["title"]</h1>
<a class="btn btn-primary" asp-area="" asp-page="./Create">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
    </svg>
    Thêm sản phẩm
</a>
<hr />
<div class="row justify-content-center">
    
    @foreach (var item in Model.DBProduct)
    { 
        <div class="col-md-3 mb-2">
            <div>
                <div class="card">
                    <div class="card-body">
                        <img src=@item.Image class="card-img-top" alt="...">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text text-danger fw-bold">@item.Price</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <a class="btn btn-outline-primary fw-bold" asp-page="./Detail" asp-route-id="@item.Id">Xem</a>
                            <a class="btn btn-primary fw-bold">Mua</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
        
</div>
